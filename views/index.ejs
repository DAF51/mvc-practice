<!DOCTYPE html>
<html lang="en">
	<head>
    	<meta charset="utf-8">
			<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=yes">
    	<meta name="description" content="Your description goes here">
    	<meta name="keywords" content="one, two, three">

		<!-- external CSS link -->
		<link rel="stylesheet" href="../css/normalize.css">
		<link rel="stylesheet" href="../css/style.css">
	</head>
	<body>
		<h1>Welcome to the arena!</h1>
			<fieldset class="createChar">
				<legend>Create a fighter</legend>
		
					<form action="/" method="POST">
						<label>Fighter Name:
							<input type="text" name="fighterName" required></input>
						</lable>

						<label>
							Fighter HP:
							<input type="number" min="1" name="fighterHP"></input>
						</label>

						<label>
							Fighter attack:
							<input type="number" min="1" name="fighterAttack"></input>
						</label>

						<label>
							Description:
							<textarea name="fighterDesc" maxlength="50" placeholder="50 characters max"></textarea>
						</label>

						<button type="submit" name="submit">Add fighter to the roster</button>
					</form>
			</fieldset>

			<h2>The Roster</h2>
			<div class="roster">
				<% roster.forEach(character => {  %>
						<div class="character" data-id=<%=character._id %> data-maxhp=<%=character.maxHP%> data-att=<%=character.att%> data-currenthp=<%character.currentHP%>>
							<ul class="charAttributes">
								<li>Name: <%=character.name%></li>
								<li class="HP">HP: <%=character.currentHP%>/<%=character.maxHP%></li>
								<li>Attack: <%=character.ATT%></li>
								<li>Description: <%=character.desc%></li>
							</ul>
							<button class="delete">Delete</button> 
							<% if(character.currentHP < character.maxHP) { %>
								<button class="heal">Heal</button>
							<% } %>
						</div>
					<% }) %>

			</div>

			<h2>The Graveyard</h2>
			<div class="graveyard">
				<% grave.forEach(character => {  %>
						<div class="character" data-id=<%=character._id %> data-maxhp=<%=character.maxHP%>>
							<ul class="charAttributes">
								<li>Name: <%=character.name%></li>
								<li>HP: <%=character.currentHP%>/<%=character.maxHP%></li>
								<li>Attack: <%=character.ATT%></li>
								<li>Description: <%=character.desc%></li>
							</ul>
							<button class="delete">Delete</button> 
							<button class="heal">Revive</button>
						</div>
				<%	})  %>
			</div>

		<script type="text/javascript" src="../js/main.js"></script>
	</body>
</html>
